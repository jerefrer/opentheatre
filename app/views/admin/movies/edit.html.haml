- model_class = Movie
.page-header
  %h1= t '.title', :default => [:'helpers.titles.new', 'Edit %{model}'], :model => model_class.model_name.human.titleize

= simple_form_for [:admin, @movie], :html => { :class => 'form-horizontal' } do |f|
  = f.input :title
  = f.input :overview
  = f.input :slug
  = f.input :poster, :as => :image_preview
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), movies_path, :class => 'btn'
