- model_class = Movie
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize
%p
  .poster= image_tag @movie.poster.url
%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @movie.title
%p
  %strong= model_class.human_attribute_name(:overview) + ':'
  %br
  = @movie.overview
%p
  %strong= model_class.human_attribute_name(:slug) + ':'
  %br
  = @movie.slug
